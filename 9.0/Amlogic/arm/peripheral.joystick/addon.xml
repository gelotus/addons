    <import addon="kodi.binary.global.main" version="1.0.13"/>
    <import addon="kodi.binary.global.general" version="1.0.3"/>
    <import addon="kodi.binary.global.filesystem" version="1.0.2"/>
    <import addon="kodi.binary.instance.peripheral" version="1.3.7"/>
  </requires>
  <extension point="kodi.peripheral" provides_joysticks="true" provides_buttonmaps="true" library_linux="peripheral.joystick.so.1.4.6"/>
